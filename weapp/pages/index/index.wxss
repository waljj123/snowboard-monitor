.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.banner {
  background: linear-gradient(135deg, #3498db, #8e44ad);
  color: white;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.banner-content {
  text-align: center;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.banner-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: white;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.stat-number {
  font-size: 36rpx;
  color: #3498db;
  font-weight: bold;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 10rpx;
}

.filter-section {
  background: white;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.search-input {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.filter-controls {
  display: flex;
  gap: 20rpx;
}

.filter-picker {
  flex: 1;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.picker-label {
  color: #666;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-card {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
}

.product-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-brand {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.price-section {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex-wrap: wrap;
}

.current-price {
  font-size: 36rpx;
  color: #e74c3c;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.discount {
  background: #27ae60;
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.category {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.action-buttons {
  margin-top: 10rpx;
}

.copy-btn {
  background: #3498db;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-more-btn {
  background: #3498db;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
}

.loading, .empty, .no-more {
  text-align: center;
  padding: 100rpx 0;
  color: #666;
  font-size: 28rpx;
}