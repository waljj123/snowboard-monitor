.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.search-section {
  margin-bottom: 20rpx;
}

.search-input {
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.filter-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-picker {
  flex: 1;
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.picker-label {
  color: #666;
}

.snowboard-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.snowboard-card {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.snowboard-image {
  width: 200rpx;
  height: 200rpx;
}

.snowboard-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.brand {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.price-section {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.current-price {
  font-size: 36rpx;
  color: #e74c3c;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.discount {
  background: #27ae60;
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.category {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx;
  color: #666;
}