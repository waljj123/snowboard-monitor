/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 通用按钮样式 */
.btn-primary {
  background: #3498db;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
}

.btn-primary:active {
  background: #2980b9;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #666;
}

.loading text {
  display: block;
  margin-top: 20rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}